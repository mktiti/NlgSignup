<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="utf-8" />
        <title>$event.name</title>
        <style>
            #include("style.css")
            body {
                margin-bottom: 10px;
            }
        </style>
    </head>
    <body>

        #parse("header.vts")

        <h2 style="text-align: center">$event.name</h2>
        <table class="ctable">
            <tr>
                <th>Név</th>
                <th>Osztály</th>>
            </tr>
            #foreach( $student in $students )
                <tr>
                    <td><a href="/admin/students/$student.id">$student.name</a></td>
                    <td>$student.email</td>
                </tr>
            #end

        </table>

    </body>
</html>